lado1 = int(input('Coloque um valor desejado: '))
lado2 = int(input('Coloque outro valor: '))
lado3 = int(input('Coloque mais um valor: '))

if(lado1 < lado2 + lado3 and lado2 < lado3 + lado1 and lado3 < lado1 + lado2):
    print('Essas medidas podem formar um triângulo')

    if(lado1 == lado2 and lado2 == lado3 and lado3 == lado1):
        print('equilátero')

    elif( lado1 != lado2 != lado3 !=lado1):
        print('Tringulo escaleno')

    else:
        print('Triangulo isósceles')

else:
    print('Essas medidas não podem formar um triangulo')
